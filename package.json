{
  "name": "auroratide.com",
  "version": "1.1.2",
  "description": "Timothy Foster's humble website",
  "main": "index.js",
  "scripts": {
    "start": "serve -l 3000",
    "start:watch": "npm run build && npm-run-all --parallel build:webpack:watch start",
    "ci": "npm-run-all test:unit test:behavioural test:functional build:prod",
    "build": "npm-run-all build:webpack build:html build:assets build:digests build:posts",
    "build:prod": "npm-run-all build:webpack:prod build:html build:assets build:digests build:posts",
    "build:webpack": "webpack --config webpack/dev.config.js",
    "build:webpack:watch": "webpack --config webpack/dev.config.js --watch",
    "build:webpack:prod": "webpack --config webpack/prod.config.js",
    "build:html": "mkdir -p public && cp src/client/index.html public/index.html",
    "build:assets": "mkdir -p public && cp -a content/assets public",
    "build:digests": "node src/content/digests/build",
    "build:posts": "node src/content/posts/build",
    "clean": "rm -rf public",
    "lint": "npm-run-all lint:js lint:css",
    "lint:js": "eslint '{src,test}/**/*.{js,jsx}'",
    "lint:css": "stylelint 'src/**/*.css'",
    "test": "npm-run-all lint test:all",
    "test:all": "npm-run-all test:unit test:behavioural test:functional build test:ui",
    "test:unit": "NODE_ENV=test jest test/unit",
    "test:behavioural": "NODE_ENV=test jest test/behavioural",
    "test:functional": "NODE_ENV=test jest test/functional",
    "test:ui": "NODE_ENV=test testcafe chrome:headless test/ui/**/*.spec.js --app 'npm start' --app-init-delay 1000",
    "test:ui:watch": "NODE_ENV=test testcafe 'chrome:emulation:device=nexus 7' test/ui/**/*.spec.js --app 'npm start' --app-init-delay 1000",
    "test:watch": "NODE_ENV=test jest test/ --watch",
    "components:create": "node scripts/components/create",
    "digests:create": "node scripts/digests/create",
    "posts:create": "node scripts/posts/create"
  },
  "author": "Timothy Foster",
  "license": "ISC",
  "repository": {
    "url": "https://github.com/Auroratide/auroratide.com",
    "type": "git"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.4",
    "@fortawesome/free-brands-svg-icons": "^5.3.1",
    "@fortawesome/free-solid-svg-icons": "^5.3.1",
    "@fortawesome/react-fontawesome": "0.1.3",
    "axios": "^0.18.0",
    "classnames": "^2.2.6",
    "intersection-observer": "^0.5.0",
    "mobx": "^5.1.0",
    "mobx-react": "^5.2.5",
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-document-title": "^2.0.3",
    "react-dom": "^16.4.2",
    "react-router-dom": "^4.3.1",
    "react-syntax-highlighter": "^8.0.1",
    "regenerator-runtime": "^0.12.1",
    "serve": "^10.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-webpack-alias": "^2.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "commander": "^2.17.1",
    "css-loader": "^1.0.0",
    "enzyme": "^3.5.1",
    "enzyme-adapter-react-16": "^1.3.1",
    "eslint": "^5.5.0",
    "eslint-plugin-jest": "^21.22.0",
    "eslint-plugin-react": "^7.11.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.5.0",
    "mini-css-extract-plugin": "^0.4.3",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-import": "^12.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-mixins": "^6.2.0",
    "postcss-preset-env": "^5.3.0",
    "rimraf": "^2.6.2",
    "style-loader": "^0.23.0",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0",
    "testcafe": "^0.22.0",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0",
    "webpack-merge": "^4.1.4",
    "zaha": "^0.1.5"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css)$": "identity-obj-proxy",
      "style$": "identity-obj-proxy"
    }
  }
}
