{
  "name": "auroratide.com",
  "version": "1.2.3",
  "description": "Timothy Foster's humble website",
  "main": "index.js",
  "scripts": {
    "start": "serve -l 3000",
    "start:watch": "npm run build && npm-run-all --parallel build:webpack:watch start",
    "ci": "npm-run-all test:unit test:behavioural test:functional build:prod",
    "build": "npm-run-all build:webpack build:html build:assets build:digests build:posts build:portfolio",
    "build:prod": "npm-run-all build:webpack:prod build:html build:assets build:digests build:posts build:portfolio",
    "build:webpack": "webpack --config webpack/dev.config.js",
    "build:webpack:watch": "webpack --config webpack/dev.config.js --watch",
    "build:webpack:prod": "webpack --config webpack/prod.config.js",
    "build:html": "mkdir -p public && cp src/client/index.html public/index.html",
    "build:assets": "mkdir -p public && cp -a content/assets public",
    "build:digests": "node src/content/digests/build",
    "build:posts": "node src/content/posts/build",
    "build:portfolio": "node src/content/portfolio/build",
    "clean": "rm -rf public",
    "lint": "npm-run-all lint:js lint:css",
    "lint:js": "eslint '{src,test}/**/*.{js,jsx}'",
    "lint:css": "stylelint 'src/**/*.css'",
    "test": "npm-run-all lint test:all",
    "test:all": "npm-run-all test:unit test:behavioural test:functional build test:ui",
    "test:unit": "NODE_ENV=test jest test/unit",
    "test:behavioural": "NODE_ENV=test jest test/behavioural",
    "test:functional": "NODE_ENV=test jest test/functional",
    "test:ui": "NODE_ENV=test testcafe chrome:headless test/ui/**/*.spec.js --app 'npm start' --app-init-delay 1000",
    "test:ui:watch": "NODE_ENV=test testcafe 'chrome:emulation:device=nexus 7' test/ui/**/*.spec.js --app 'npm start' --app-init-delay 1000",
    "test:watch": "NODE_ENV=test jest test/ --watch",
    "components:create": "node scripts/components/create",
    "digests:create": "node scripts/digests/create",
    "posts:create": "npm run _posts:create",
    "_posts:create": "node scripts/posts/create",
    "post_posts:create": "npm run netlify:update",
    "portfolio:create": "node scripts/portfolio/create",
    "postportfolio:create": "npm run netlify:update",
    "netlify:update": "node scripts/netlify/update"
  },
  "author": "Timothy Foster",
  "license": "ISC",
  "repository": {
    "url": "https://github.com/Auroratide/auroratide.com",
    "type": "git"
  },
  "dependencies": {
    "@auroratide/use-async": "^0.1.0",
    "@auroratide/wait": "^0.1.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.26",
    "@fortawesome/free-brands-svg-icons": "^5.12.0",
    "@fortawesome/free-solid-svg-icons": "^5.12.0",
    "@fortawesome/react-fontawesome": "0.1.3",
    "axios": "^0.19.0",
    "classnames": "^2.2.6",
    "intersection-observer": "^0.5.1",
    "md-reactor": "^0.3.3",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-document-title": "^2.0.3",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-syntax-highlighter": "^10.3.5",
    "regenerator-runtime": "^0.13.3",
    "serve": "^10.1.2",
    "sudoku": "0.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-decorators": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^8.0.6",
    "babel-plugin-webpack-alias": "^2.1.2",
    "commander": "^2.20.3",
    "css-loader": "^1.0.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^5.16.0",
    "eslint-plugin-jest": "^21.27.2",
    "eslint-plugin-react": "^7.17.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-canvas-mock": "^1.1.0",
    "mini-css-extract-plugin": "^0.4.5",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-mixins": "^6.2.3",
    "postcss-preset-env": "^5.3.0",
    "rimraf": "^2.7.1",
    "style-loader": "^0.23.1",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.3.0",
    "testcafe": "^1.7.1",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2",
    "zaha": "^0.1.5"
  },
  "jest": {
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "identity-obj-proxy",
      "style$": "identity-obj-proxy"
    }
  }
}
