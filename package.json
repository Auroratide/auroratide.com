{
  "name": "auroratide.com",
  "version": "2.1.0",
  "description": "Timothy Foster's humble website",
  "scripts": {
    "start": "serve -l 3000",
    "ci": "npm-run-all validate test build",
    "dev": "npm run build:content && npm-run-all --parallel 'build:client -- -w' start",
    "build": "npm-run-all build:client build:content",
    "build:client": "rollup -c",
    "build:content": "ts-node src/content/index.ts",
    "clean": "rm -rf public/build public/api",
    "test": "jest",
    "validate": "svelte-check --ignore scripts",
    "components:create": "node scripts/components/create",
    "posts:create": "npm run _posts:create",
    "_posts:create": "node scripts/posts/create",
    "post_posts:create": "npm run netlify:update",
    "portfolio:create": "node scripts/portfolio/create",
    "postportfolio:create": "npm run netlify:update",
    "netlify:update": "node scripts/netlify/update"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Auroratide/auroratide.com.git"
  },
  "author": "Timothy Foster",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Auroratide/auroratide.com/issues"
  },
  "homepage": "https://github.com/Auroratide/auroratide.com#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-typescript": "^8.1.0",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/svelte": "^3.0.3",
    "@tsconfig/svelte": "^1.0.10",
    "@types/jest": "^26.0.19",
    "commander": "^7.0.0",
    "jest": "^26.6.3",
    "jest-canvas-mock": "^2.3.0",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.36.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.31.2",
    "svelte-check": "^1.1.24",
    "svelte-jester": "^1.3.0",
    "svelte-preprocess": "^4.6.1",
    "ts-jest": "^26.4.4",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@auroratide/wait": "^0.2.0",
    "@fortawesome/free-brands-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@types/page": "^1.11.1",
    "marked": "^2.0.1",
    "page": "^1.11.6",
    "prismjs": "^1.23.0",
    "serve": "^11.3.2",
    "sudoku": "^0.0.3",
    "ts-node": "^9.1.1"
  }
}
