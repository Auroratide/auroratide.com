{
  "name": "auroratide.com",
  "version": "0.1.0",
  "description": "Timothy Foster's humble website",
  "main": "index.js",
  "scripts": {
    "start": "serve -s -n -t -S -p 3000 public",
    "start:dev": "serve -s -n -l -u -p 3000 -c 0 public",
    "start:watch": "npm run build && npm-run-all --parallel build:webpack:watch start:dev",
    "build": "npm-run-all build:webpack build:html build:assets",
    "build:webpack": "webpack",
    "build:webpack:watch": "webpack --watch",
    "build:html": "mkdir -p public && cp src/client/index.html public/index.html",
    "build:assets": "mkdir -p public && cp -a src/assets public",
    "clean": "rm -rf public",
    "lint": "eslint '{src,test}/**/*.{js,jsx}'",
    "test": "npm-run-all lint test:all",
    "test:all": "npm run test:unit",
    "test:unit": "NODE_ENV=test jest test/unit",
    "test:watch": "NODE_ENV=test jest test/ --watch",
    "components:create": "node scripts/components/create"
  },
  "author": "Timothy Foster",
  "license": "ISC",
  "dependencies": {
    "classnames": "^2.2.5",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-router-dom": "^4.2.2",
    "serve": "^6.5.6"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-webpack-alias": "^2.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "commander": "^2.15.1",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-react": "^7.8.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.3",
    "npm-run-all": "^4.1.3",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.5",
    "style-loader": "^0.21.0",
    "webpack": "^4.8.1",
    "webpack-cli": "^2.1.3"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css)$": "identity-obj-proxy",
      "style$": "identity-obj-proxy"
    }
  }
}
